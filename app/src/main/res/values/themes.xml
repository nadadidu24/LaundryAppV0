<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LaundryApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LaundryApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LaundryApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LaundryApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
       <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="myFullscreenAlertDialogStyle" parent="Theme.AppCompat.Light.NoActionBar">      //no actionbar, but status bar exists

        <item name="android:windowFullscreen">true</item>                       //remove status bar
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>        //smooth animation
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowSoftInputMode">stateHidden|adjustPan</item>
        <item name="colorAccent">@color/black</item>                      //change button text color
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#595959</item>
    </style>

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="android:windowFullscreen">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/grey</item>
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/greyblack</item>
        <item name="colorControlHighlight">@color/blue</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textColorPrimary">@color/grey</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:windowBackground">@drawable/bg_login</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@color/purple_200</item>
    </style>

</resources>